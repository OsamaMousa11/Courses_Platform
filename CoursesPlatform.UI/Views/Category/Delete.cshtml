@model CategoryResponse

<h2>Category Details</h2>

<div>
    <h4>@Model.Name</h4>
    <p>Id: @Model.Id</p>

    <form asp-action="Delete" method="post" asp-route-id="@Model.Id" onsubmit="return confirm('Are you sure you want to delete this category?');">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div>